<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/examContent_main"
    android:background="@color/white">

    <!-- Top banner (kept id cardImage so java won't be impacted) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="168dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary_secondary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hey Bemnet Tilahun"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/headerIllustration"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/subWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Choose a chapter to start exam"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/welcomeText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/headerIllustration"
                app:layout_constraintHorizontal_bias="0.0"/>

            <!-- headerIllustration replaced with subject progress indicator -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerIllustration"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/headerProgress"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:indeterminate="false"
                    app:indicatorSize="110dp"
                    android:max="100"
                    app:indicatorColor="@color/white"
                    app:trackColor="@color/LightBlue2"
                    app:trackThickness="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/headerPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/headerProgress"
                    app:layout_constraintBottom_toBottomOf="@id/headerProgress"
                    app:layout_constraintStart_toStartOf="@id/headerProgress"
                    app:layout_constraintEnd_toEndOf="@id/headerProgress"/>

                <TextView
                    android:id="@+id/headerProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/headerPercent"
                    app:layout_constraintStart_toStartOf="@id/headerProgress"
                    app:layout_constraintEnd_toEndOf="@id/headerProgress"
                    android:layout_marginTop="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Section title (kept id littleTitle) -->
    <TextView
        android:id="@+id/littleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapters"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Circular Material Progress Indicator (same id contentProgress) -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/contentProgress"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:visibility="gone"
        app:indicatorSize="44dp"
        app:trackThickness="4dp"
        app:indicatorInset="6dp"
        app:indicatorColor="@color/primary_secondary"
        app:trackColor="@color/LightBlue"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"/>

    <!-- Empty state (kept id emptyStateText) -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/cricle2"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contentProgress"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/math"
            android:tint="@color/black_low"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No chapters found"
            android:textColor="@color/black_low"
            android:layout_marginStart="12dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- RecyclerView (kept id examContentRecycler) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/examContentRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/littleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>