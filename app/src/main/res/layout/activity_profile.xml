<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <!-- BACK / NAV -->
    <ImageView
        android:id="@+id/profileBackArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="back"
        android:src="@drawable/back"
        android:padding="6dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />

    <!-- Avatar container (centered) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageContainer"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="180dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        android:padding="2dp"
        android:layout_marginTop="8dp"
        android:outlineAmbientShadowColor="@color/LightBlue2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/uploadProgress"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicatorSize="56dp"
                app:trackThickness="6dp"
                app:indicatorColor="@color/primary_secondary"
                app:trackColor="@color/LightBlue"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- small camera button overlapping avatar (bottom-right) -->
    <ImageView
        android:id="@+id/changeProfileBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/camera"
        android:elevation="12dp"
        android:backgroundTint="@color/primary_secondary"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
        app:layout_constraintEnd_toEndOf="@id/profileImageContainer"
        android:translationY="-36dp"/>

    <!-- Full name -->
    <TextView
        android:id="@+id/fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="14sp"
        android:textColor="@color/black_low"
        app:layout_constraintTop_toBottomOf="@id/fullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
  />

    <!-- small stats row (equal-width cards) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statCard1"
            android:layout_width="0dp"
            android:layout_height="84dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/statCard2"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/scoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="12sp"
                    android:textColor="@color/black_low"/>

                <TextView
                    android:id="@+id/scoreValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82%"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statCard2"
            android:layout_width="0dp"
            android:layout_height="84dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toEndOf="@id/statCard1"
            app:layout_constraintEnd_toStartOf="@id/statCard3"
            app:layout_constraintWidth_percent="0.33"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/gradeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade"
                    android:textSize="12sp"
                    android:textColor="@color/black_low"/>

                <TextView
                    android:id="@+id/gradeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statCard3"
            android:layout_width="0dp"
            android:layout_height="84dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toEndOf="@id/statCard2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.33"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/sectionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:textSize="12sp"
                    android:textColor="@color/black_low"/>

                <TextView
                    android:id="@+id/sectionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Personal Info card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/personalInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/statsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/cricle2"
        android:outlineSpotShadowColor="@color/LightBlue"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/cricle2"
            >

            <TextView
                android:id="@+id/personalInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Info"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- username row -->
            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginEnd="8dp"
                android:text="Username"
                android:textColor="@color/black_low"
                app:layout_constraintEnd_toStartOf="@id/username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/personalInfoTitle" />

            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="end"
                android:text="username"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/usernameTxt"
                app:layout_constraintTop_toBottomOf="@id/personalInfoTitle" />

            <!-- full name -->
            <TextView
                android:id="@+id/fullNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginEnd="8dp"
                android:text="Full name"
                android:textColor="@color/black_low"
                app:layout_constraintEnd_toStartOf="@id/fullName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView
                android:id="@+id/fullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="end"
                android:text="Full name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fullNameTxt"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <!-- email -->
            <TextView
                android:id="@+id/EmailTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginEnd="8dp"
                android:text="Email"
                android:textColor="@color/black_low"
                app:layout_constraintEnd_toStartOf="@id/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fullName" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="end"
                android:text="email@example.com"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/EmailTxt"
                app:layout_constraintTop_toBottomOf="@id/fullName" />

            <!-- phone -->
            <TextView
                android:id="@+id/phoneTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginEnd="8dp"
                android:text="Phone No"
                android:textColor="@color/black_low"
                app:layout_constraintEnd_toStartOf="@id/phoneNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="end"
                android:text="+251 90 000 0000"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/phoneTxt"
                app:layout_constraintTop_toBottomOf="@id/email" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

