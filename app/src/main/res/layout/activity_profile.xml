                            android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tgSubtitle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="https://t.me/gojo_edu"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/black_low"
                                                    android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- divider that starts aligned with text group start -->
                    <View
                        android:id="@+id/telegramDivider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black_low"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/telegramTextGroup"
                        app:layout_constraintTop_toBottomOf="@id/telegramTextGroup" />
