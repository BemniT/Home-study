    <!-- Edit profile action -->
    <androidx.cardview.widget.CardView
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/personalInfoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:outlineSpotShadowColor="@color/LightBlue"
        android:background="@drawable/cricle2"

        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/cricle2"
            >

            <ImageView
                android:id="@+id/editProfileIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/edit" />

            <TextView
                android:id="@+id/editProfileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Edit Profile" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Term and privacy -->
    <androidx.cardview.widget.CardView
        android:id="@+id/termAndPrivacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/accountDataInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:outlineSpotShadowColor="@color/LightBlue"

        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/cricle2"
            >

            <ImageView
                android:id="@+id/termIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/terms" />

            <TextView
                android:id="@+id/termAndPrivacyTxt"
                android:layout_width="wrap_content"
