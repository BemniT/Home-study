<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chapterCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="1dp"
    app:strokeColor="@color/option_border"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <!-- Leading icon circle -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_bg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chapterIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/cricle2"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/chapterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chapter title"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/chapterIcon"
            app:layout_constraintTop_toTopOf="@id/chapterIcon"
            app:layout_constraintEnd_toStartOf="@id/chapterExamTag"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/chapterMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30 Q â€¢ 30m"
            android:textSize="13sp"
            android:textColor="@color/black_low"
            app:layout_constraintStart_toEndOf="@id/chapterIcon"
            app:layout_constraintTop_toBottomOf="@id/chapterTitle"
            app:layout_constraintEnd_toStartOf="@id/chapterResult"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"/>

        <!-- Exam tag: styled small pill -->
        <TextView
            android:id="@+id/chapterExamTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:backgroundTint="@color/primary_secondary"
            app:layout_constraintTop_toTopOf="@id/chapterTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pill_selected"/>

        <!-- Result pill (if user took the exam) -->
        <TextView
            android:id="@+id/chapterResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 24/30 (Passed)"
            android:textSize="13sp"
            android:textColor="@color/Green"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chapterMeta"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>