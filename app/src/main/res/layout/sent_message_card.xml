<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp">

    <!-- Sent bubble anchored to end (no guideline) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sentBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="12dp"
        android:minWidth="70dp"
        android:background="@drawable/bg_sent_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Image container with rounded corners that clips the image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCard"
            android:layout_width="180dp"
            android:layout_height="160dp"
            app:cardCornerRadius="14dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Text (placed below image if present) -->
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:lineSpacingExtra="2dp"
            android:maxLines="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCard" />

        <!-- Bottom meta: datetime + seen -->
        <LinearLayout
            android:id="@+id/sentMetaRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintTop_toBottomOf="@id/textMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textEditedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(edited)"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/white_70"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:10 AM"
                android:textSize="12sp"
                android:textColor="@color/white_70"
                android:layout_marginEnd="@dimen/_6sdp"/>

            <ImageView
                android:id="@+id/seenIcon"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/single_check"
                android:contentDescription="seen_icon"
                app:tint="@color/white_70" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>