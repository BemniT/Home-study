<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:outlineSpotShadowColor="@color/primary_secondary"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/card_outline"

        >

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/profile_image"
            app:civ_border_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Time -->
        <TextView
            android:id="@+id/lastMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textSize="12sp"
            android:textColor="@color/grey500"
            app:layout_constraintTop_toTopOf="@id/imageProfile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" />

        <!-- Seen icon (single/double check) placed left of time -->
        <ImageView
            android:id="@+id/seenIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:tint="@color/grey500"
            app:layout_constraintEnd_toStartOf="@id/lastMessageTime"
            app:layout_constraintTop_toTopOf="@id/lastMessageTime"
            android:layout_marginEnd="8dp" />

        <!-- Unread badge on the far right, vertically centered -->
        <TextView
            android:id="@+id/badgeReceivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageProfile"
            app:layout_constraintTop_toTopOf="@id/imageProfile" />

        <!-- Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imageProfile"
            app:layout_constraintTop_toTopOf="@id/imageProfile"
            app:layout_constraintEnd_toStartOf="@id/seenIcon"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Role pill -->
        <TextView
            android:id="@+id/userRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:textSize="10sp"
            android:textColor="@color/primary"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/role_fill_bg"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/userName"
            app:layout_constraintTop_toBottomOf="@id/userName" />

        <!-- Last message (preview) -->
        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last message preview goes here..."
            android:textColor="@color/grey600"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/userName"
            app:layout_constraintTop_toBottomOf="@id/userRole"
            app:layout_constraintEnd_toStartOf="@id/badgeReceivedMessage"
            android:layout_marginTop="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>